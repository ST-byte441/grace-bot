{
  "name": "grace-bot",
  "version": "1.0.0",
  "description": "A discord bot!",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsx --watch src/bot.ts",
    "build": "tsc",
    "start": "node dist/bot.js",
    "register": "tsx src/registerCommands.ts",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop grace-bot",
    "pm2:restart": "pm2 restart grace-bot",
    "pm2:logs": "pm2 logs grace-bot",
    "pm2:status": "pm2 status"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ST-byte441/grace-bot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ST-byte441/grace-bot/issues"
  },
  "homepage": "https://github.com/ST-byte441/grace-bot#readme",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
